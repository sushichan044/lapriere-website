---
import '@/feature/style/global.scss'
import '@/feature/style/rlc.scss'

import { ViewTransitions } from 'astro:transitions'

import { AstroQwikEventBrigde } from '@/feature/qwik'
import { ThemeScript } from '@/feature/theme'


type Props = {
  lang?: string
}

const { props } = Astro

const DEFAAULT_LANG = 'ja';

// bodyのonclickはiOSでドロップダウン等のフォーカスが外れない問題の対策です
// ThemeScriptは必ず一番はじめに実行してください
---

<html lang={props.lang ?? DEFAAULT_LANG}>
  <head>
    <ThemeScript />
    <!-- <ViewTransitions /> -->
    <slot name="head" />
  </head>
  <body
    class="flex min-h-dvh flex-col overflow-y-scroll underline-offset-4"
    onclick="document.querySelector('body').focus()"
  >
    <slot />
    <AstroQwikEventBrigde />
  </body>
</html>
