{
  "extends": [
    "config:recommended",
    "schedule:weekends",
    ":prConcurrentLimit20",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)"
  ],
  "labels": ["renovate", "deps"],
  "commitMessagePrefix": "feat(deps): ",
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchPackageNames": ["astro-integration-kit"],
      "enabled": false
    },
    {
      "groupName": "runtime",
      "matchPackageNames": ["bun-types", "typescript"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "test",
      "matchPackagePatterns": ["^@playwright"],
      "matchPackageNames": ["expect-axe-playwright", "reg-suit"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "css",
      "matchPackagePatterns": [
        "^@tailwindcss",
        "^tailwind"
      ],
      "matchPackageNames": [
        "cva",
        "css",
        "sass",
        "postcss-html",
        "daisyui"
      ],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "icon",
      "matchPackagePatterns": ["^@iconify", "^@svgr", "^@svgx"],
      "matchPackageNames": ["unplugin-icons"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "astro",
      "matchPackagePatterns": ["^astro", "^@qwikdev", "^@builder.io", "^@astro", "^remark", "^rehype"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "linter",
      "matchPackagePatterns": ["^@eslint", "^eslint", "^stylelint"],
      "matchPackageNames": ["typescript-eslint", "@antfu/eslint-config"],
      "matchUpdateTypes": ["major", "minor"]
    }
  ]
}
