{
  "extends": [
    "config:recommended",
    "schedule:weekends",
    ":prConcurrentLimit20",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)"
  ],
  "labels": ["renovate", "deps"],
  "commitMessagePrefix": "feat(deps): ",
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "matchPackagePatterns": ["astro-integration-kit"],
      "enabled": false
    },
    {
      "groupName": "runtime",
      "matchPackageNames": ["bun-types", "typescript"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "test",
      "matchPackagePrefixes": ["@playwright"],
      "matchPackageNames": ["expect-axe-playwright", "reg-suit"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "css",
      "matchPackagePrefixes": [
        "@tailwindcss",
        "tailwind"
      ],
      "matchPackageNames": [
        "cva",
        "css",
        "sass",
        "postcss-html",
        "daisyui"
      ],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "icon",
      "matchPackagePrefixes": ["@icontify", "@svgr", "@svgx"],
      "matchPackageNames": ["unplugin-icons"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "astro",
      "matchPackagePatterns": ["astro", "@qwikdev", "@builder.io"],
      "matchPackagePrefixes": ["@astro", "remark", "rehype"],
      "matchUpdateTypes": ["major", "minor"]
    },
    {
      "groupName": "linter",
      "matchPackagePrefixes": ["@eslint", "eslint", "stylelint"],
      "matchPackageNames": ["typescript-eslint", "@antfu/eslint-config"],
      "matchUpdateTypes": ["major", "minor"]
    }
  ]
}
